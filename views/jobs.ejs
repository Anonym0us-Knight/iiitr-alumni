<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Postings</title>
</head>
<body>
    <h1>Welcome to the Job Postings Page</h1>

    <!-- Form to create a new job post -->
    <form action="/job" method="POST">
        <input type="text" name="title" placeholder="Job Title" required><br>
        <textarea name="content" rows="4" cols="50" placeholder="Job Description..." required></textarea><br>
        <button type="submit">Post Job</button>
    </form>

    <h2>All Job Postings</h2>
    <ul>
        <% jobs.forEach(job => { %>
            <li>
                <h3><%= job.title %></h3>
                <p><strong>Posted On:</strong> <%= new Date(job.created_at).toLocaleDateString() %></p>
                <p><%= job.content %></p>
            </li>
        <% }); %>
    </ul>

    <!-- Footer -->
    <footer style="background-color: #f1f1f1; padding: 10px; text-align: center; position: fixed; bottom: 0; width: 100%; border-top: 1px solid #ddd;">
        <p>
            <a href="/posts" style="text-decoration: none; color: #007BFF;">View Messages</a> | 
            <a href="/donate" style="text-decoration: none; color: #007BFF;">Donate</a> |
            <a href="/blogs" style="text-decoration: none; color: #007BFF;">News</a> |
            <a href="/jobs" style="text-decoration: none; color: #007BFF;">Jobs</a>
        </p>
    </footer>
</body>
</html>
