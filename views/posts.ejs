<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alumni Messenger</title>
    <style>
       body {
        text-align: center;
       }
     .smit{
        background-color: black;
        color:white;

     }
     .refresh-button{
        background-color: black;
        color:white;  
     }
     .logout{
        background-color: black;
        color:white;
     }
     a {
        color: black;
     }
    </style>
</head>
<body style="background-color: gray;">
    <div>
    <h1 class="head">Alumni Messenger</h1>

    <form action="/post" method="POST">
        <textarea class="txt" name="content" rows="4" cols="50" placeholder="What's on your mind?"></textarea><br>
        <button class="smit" type="submit">Message</button>
    </form>

    <h2 class="subhead">All Messages</h2>
    <ul>
        <% posts.forEach(post => { %>
            <li><strong><%= post.user %></strong>: <%= post.content %></li>
        <% }); %>
    </ul>

    <!-- Logout Button -->
    <button class="refresh-button" onclick="window.location.reload();">Reload Messages</button>
    <form action="/logout" method="GET">
        <button class="logout" type="submit">Logout</button>
    </form>
</div>
    <!-- Footer -->
<!-- Footer -->
<footer class="foot" style="background-color: gray;color:black; padding: 10px; text-align: center; position: fixed; bottom: 0; width: 100%; border-top: 1px solid #ddd;">
    <p>
        <a href="/posts" style="text-decoration: none; color: #007BFF;">View Messages</a> | 
        
        <a href="/blogs" style="text-decoration: none; color: #007BFF;">News</a> |
        <a href="/jobs" style="text-decoration: none; color: #007BFF;">Jobs</a> |
        <a href="/donate" style="text-decoration: none; color: #007BFF;">Donate</a> |
        <a href="/about" style="text-decoration: none; color: #007BFF;">About Us</a> |
        <a href="/" style="text-decoration: none; color: #007BFF;">Home</a>
    </p>
</footer>

</body>
</html>
